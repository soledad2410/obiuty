extends ../../layouts/master.jade

append titlePage
  title Thêm mới thành viên - ORM

append css
  link(href='/public/templates/assets/css/user.css', rel='stylesheet', type='text/css')
  link(href='/public/templates/assets/css/bootstrap-datepicker3.css', rel='stylesheet', type='text/css')

append body
  +body(class="page-header-fixed page-sidebar-closed-hide-logo page-sidebar-closed-hide-logo")

append body-content
  include ../../includes/header.jade
  .page-container
    include ../../includes/sidebar.jade

    .page-content-wrapper
      .page-content
        .page-head
          .page-title
            h1
              | Thêm thành viên
          // /.page-title
        .portlet.light
          .portlet-title
            .caption
              i.fa.fa-users.font-green-haze
              span.caption-subject.bold.uppercase.font-green-haze Thông tin thành viên
          .portlet-body.form
            form.form-horizontal(role='form', method='post')
              .form-body
                .form-group
                  label.col-md-3.control-label Tên đăng nhập
                  .col-md-9
                    input.form-control(type='text', placeholder='Nhập tên đăng nhập')
                .form-group
                  label.col-md-3.control-label Email
                  .col-md-9
                    .input-group
                      span.input-group-addon
                        i.fa.fa-envelope
                      input.form-control(type='email', placeholder='Nhập địa chỉ email')
                .form-group
                  label.col-md-3.control-label Số điện thoại
                  .col-md-9
                    input.form-control(type='text', placeholder='Nhập số điện thoại')
                .form-group
                  label.control-label.col-md-3 Ngày sinh
                  .col-md-4
                    .input-group.date.date-picker(data-date-format='dd/mm/yyyy')
                      input.form-control(type='text', readonly='', name='datepicker')
                      span.input-group-btn
                        button.btn.default(type='button')
                          i.fa.fa-calendar
                .form-group
                  label.col-md-3.control-label Mật khẩu
                  .col-md-9
                      input.form-control(type='password', placeholder='Nhập mật khẩu')
              .form-actions
                .row
                  .col-md-offset-3.col-md-9
                    button.btn.green(type='submit') Submit
                    a.btn.default(href='user.html') Cancel
      // /.page-content
    // /.page-content-wrapper

    include ../../includes/footer.jade
  append js
    script(src='/public/templates/assets/js/user.js', type='text/javascript')